# Copy this file to .env.local to use these settings

# Next Auth Configuration
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# Enable offline/development mode
# This helps when running on different machines or browsers
NEXT_PUBLIC_OFFLINE_MODE=true

# Database configuration
# Default to local SQLite when needed
DATABASE_URL="file:./prisma/dev.db"

# For browser compatibility testing
NEXT_PUBLIC_ENABLE_BROWSER_COMPATIBILITY=true 